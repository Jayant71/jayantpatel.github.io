---
import news from "../data/news.json";
---

<section id="news" class="news-section">
    <div class="container news-container">
        <div class="section-header">
            <svg
                class="header-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                    d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
                ></path><path
                    d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
                ></path>
            </svg>
            <h2 class="section-title">Latest News</h2>
        </div>

        <div class="news-list">
            {
                news.map((item) => (
                    <div class="news-item">
                        <div class="news-date">{item.date}</div>
                        <div class="news-content" set:html={item.content} />
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .news-section {
        padding: 2.5rem 0;
    }
    .news-container {
        background-color: var(--color-bg-alt);
        border-radius: 1rem;
        padding: 2.5rem;
    }
    .section-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 2rem;
    }
    .header-icon {
        width: 24px;
        height: 24px;
        color: var(--color-primary);
    }
    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
    }
    .news-list {
        display: flex;
        flex-direction: column;
    }
    .news-item {
        display: flex;
        padding: 1.25rem 0;
        border-bottom: 1px solid var(--color-border);
    }
    .news-item:last-child {
        border-bottom: none;
        padding-bottom: 0;
    }
    .news-date {
        flex-shrink: 0;
        width: 120px;
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-text-muted);
        letter-spacing: 0.05em;
        padding-top: 0.25rem;
    }
    .news-content {
        flex-grow: 1;
        font-size: 0.95rem;
        line-height: 1.6;
    }
    .news-content :global(a) {
        color: var(--color-primary);
        text-decoration: none;
    }
    .news-content :global(a:hover) {
        text-decoration: underline;
    }

    @media (max-width: 640px) {
        .news-container {
            padding: 1.5rem;
        }
        .news-item {
            flex-direction: column;
            gap: 0.5rem;
        }
        .news-date {
            width: auto;
        }
    }
</style>
