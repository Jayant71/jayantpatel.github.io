---
import data from "../data/profile.json";
---

<section class="hero-section">
    <div class="hero-container container">
        <div class="hero-image">
            <img src={data.image} alt={data.name} />
            <div class="social-badges">
                {
                    data.links.map((link) => (
                        <a
                            href={link.url}
                            class="social-badge"
                            title={link.label}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <span class="icon" set:html={link.iconSvg} />
                        </a>
                    ))
                }
            </div>
        </div>

        <div class="hero-content">
            <h1 class="hero-title">{data.tagline}</h1>
            <div class="hero-bio" set:html={data.bioHtml}></div>
            <div class="hero-actions">
                <a href={data.resumeUrl} class="btn btn-primary">
                    <svg
                        class="btn-icon"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path
                            d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"
                        ></path><polyline points="14 2 14 8 20 8"
                        ></polyline><line x1="16" y1="13" x2="8" y2="13"
                        ></line><line x1="16" y1="17" x2="8" y2="17"
                        ></line><polyline points="10 9 9 9 8 9"></polyline>
                    </svg>
                    CV / Resume (PDF)
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        padding: 1rem 0;
    }
    .hero-container {
        display: flex;
        gap: 1rem;
        align-items: center;
    }
    .hero-image {
        flex-shrink: 0;
        width: 280px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }
    .hero-image img {
        width: 240px;
        height: 240px;
        border-radius: 50%;
        object-fit: cover;
        background-color: var(--color-bg-alt);
        border: 1px solid var(--color-border);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1),
            0 8px 10px -6px rgba(0, 0, 0, 0.1);
    }
    .social-badges {
        display: flex;
        gap: 0.75rem;
    }
    .social-badge {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background-color: var(--color-bg-alt);
        border: 1px solid var(--color-border);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-text-muted);
        transition: all 0.2s ease;
    }
    .social-badge:hover {
        color: var(--color-primary);
        border-color: var(--color-primary);
        background-color: white;
    }
    .icon {
        width: 18px;
        height: 18px;
        display: flex;
    }
    .icon svg {
        width: 100%;
        height: 100%;
    }
    .hero-content {
        flex-grow: 1;
    }
    .hero-title {
        font-size: 3rem;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        font-weight: 700;
    }
    .hero-bio {
        font-size: 1.05rem;
        color: var(--color-text-muted);
        margin-bottom: 2rem;
        line-height: 1.7;
    }
    .hero-bio :global(strong) {
        color: var(--color-text);
        font-weight: 600;
    }
    .hero-actions {
        display: flex;
        gap: 1rem;
    }
    .btn-icon {
        width: 16px;
        height: 16px;
        margin-right: 0.5rem;
    }

    @media (max-width: 768px) {
        .hero-container {
            flex-direction: column;
            text-align: center;
            gap: 2.5rem;
        }
        .hero-title {
            font-size: 2.5rem;
        }
    }
</style>
